// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Tally {
    id       String     @id @default(cuid())
    nickname String
    avatar   String
    away     Int
    home     Int
    boardId  String
    board    TallyBoard @relation(fields: [boardId], references: [id])
}

model Team {
    id              String       @id
    name            String
    logo            String
    awayTallyBoards TallyBoard[] @relation("away_team")
    homeTallyBoard  TallyBoard[] @relation("home_team")
}

model League {
    id          String       @id
    name        String
    type        String
    logo        String
    countryName String
    season      String
    tallyBoard  TallyBoard[]
}

model TallyBoard {
    id            String   @id // this should be the game id
    league        League   @relation(fields: [leagueId], references: [id])
    leagueId      String
    tallies       Tally[]
    open          Boolean
    away          Team     @relation("away_team", fields: [awayId], references: [id])
    awayId        String
    home          Team     @relation("home_team", fields: [homeId], references: [id])
    homeId        String
    halfHomeScore Int      @default(0)
    halfAwayScore Int      @default(0)
    homeScore     Int      @default(0)
    awayScore     Int      @default(0)
    date          DateTime @default(now())
}
